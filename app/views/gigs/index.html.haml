#sort-buttons-container
  #sort-buttons.button-group
    %button{id: "chronological", class: "is-checked", data: {"sort-value" => "original-order"}}
      chronological
    %button{data: {"sort-value" => "band"}}
      band
    %button{data: {"sort-value" => "venue"}}
      venue
    %button{data: {"sort-value" => "price"}}
      price
%br
#gigs-listings
  - @gigs.each do |gig|
    - if @first_ids.include? gig.id
      .first-of-the-month
        = display_month(gig)
    .gig-listing{id: "gig-listing-#{gig.id}", class: "#{gig_listing_classes(gig, @last_ids)}"}
      .gig-listing-cell.showdate
        = display_showdate(gig)
      .gig-listing-cell.band
        = best_in_place_if can?(:update, gig), gig, :band, display_as: :band_upcase, type: :input, cancel_button: "CANCEL", cancel_button_class: "bip-cancel-btn"
      .gig-listing-cell.venue
        = gig.venue_name
      .gig-listing-cell.price
        %span
          = display_price(gig)