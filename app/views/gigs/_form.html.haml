= form_for @gig do |f|
  #new-gig-row-1
    #gig-showdate
      = f.label :showdate, "Showdate (YY-MM-DD)"
      = f.text_field :showdate, required: true
    #gig-band
      = f.label :band
      = f.text_field :band, required: true
  #new-gig-row-2
    #gig-venue-name
      = f.label :venue_name
      = f.text_field :venue_name, required: true
    #gig-venue-address
      = f.label :venue_address
      = f.text_field :venue_address
  #new-gig-row-3
    #gig-price
      = f.label :price
      = f.number_field :price, min: "-1", step: "0.01"
    #gig-url
      = f.label :url, "URL"
      = f.text_field :url
  %br
  = f.submit "Add Gig"


