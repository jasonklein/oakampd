- if cannot? :update, Feature
  - if @published_features.present?
    = render partial: "overview", locals: { features: @published_features }
  - else
    %h1
      %span.backing Features are on their way!
- else 
  %h2
    %span.backing Published
  %br
  = render partial: "overview", locals: { features: @published_features }
  %h2
    %span.backing Drafts
  %br
  = render partial: "overview", locals: { features: @draft_features } if @draft_features      