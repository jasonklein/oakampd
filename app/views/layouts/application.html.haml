!!! 5
%html
  %head
    = favicon_link_tag favicon_filename
    %title
      = yield(:title).empty? ? 'OAK AMPD' : yield(:title)
    %link{href: 'http://fonts.googleapis.com/css?family=Roboto+Slab:400,300|Roboto:400,300', rel:'stylesheet', type: 'text/css'}
    = stylesheet_link_tag 'application', :media => 'all'
    = render "analytics_and_maps/google_maps" if params[:controller] == "venues"
    =# logic in the view above because venues_controller? method throws undefined method error when visiting high voltage pages
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %meta{property: 'og:site_name', content: 'oak-ampd'}

  %body
    %header
      - if user_signed_in?
        #user-info
          = link_to current_user.email, user_path(current_user)
          %span &#124;
          = link_to "Add Gig(s)", new_gig_path
          %span &#124;
          = link_to "Add Venue", new_venue_path
          %span &#124;
          = link_to "Add Band", new_band_path
          %span &#124;
          = link_to "Logout", destroy_user_session_path, method: :delete
      #header-left
        = display_header_image
      #header-right
        #header-right-text
          %h5
            %span Your Oakland gig guide.
            %span.phablet-up-only Sort listings by date, venue, band, or price and find your next live music night out.
          %h5.desktop-only For tickets, click the price in the listing. Prices shown may represent the lowest and/or advance ticket prices and could be higher at the door or depending on other options.
        %nav
          %ul.nav-links
            %li.nav-link
              = link_to "GIGS", root_path, class: active_if_active("gigs")
            %li.nav-link
              = link_to "VENUES", venues_path, class: active_if_active("venues")
            %li.nav-link
              = link_to "BANDWATCH", page_path("bandwatch"), class: active_if_active("bands")
            %li.nav-link
              = link_to "ABOUT", page_path("about"), class: active_if_active("about")
            %li#contacts
              %ul.contact-icons
                %li
                  = mail_to "oakampd@gmail.com", render("layouts/email_icon")
                %li
                  = link_to render("layouts/facebook_icon"), "https://www.facebook.com/oakampd", target: "_blank"
                %li
                  = link_to render("layouts/twitter_icon"), "https://twitter.com/oakampd", target: "_blank"
    .notices
      %span.backing
        = notice
    .alerts
      %span.backing
        = alert
    #main-container
      #main-content
        = yield
      #gutter-column
      #side-content
        = render "side_content/block_ads"
        = render "layouts/twitter_widget"
    %footer
      #footer-contacts-mobile
        %ul.footer-contact-icons
          %li
            = mail_to "oakampd@gmail.com", render("layouts/email_icon")
          %li
            = link_to render("layouts/facebook_icon"), "https://www.facebook.com/oakampd", target: "_blank"
          %li
            = link_to render("layouts/twitter_icon"), "https://twitter.com/oakampd", target: "_blank"
      #footer-push
        %span.backing
          = render "layouts/builder_attribution"
    = render "analytics_and_maps/google_analytics" if in_production?