%h2
  %span.backing Edit Oak Ampd Contents
%br
= form_for @content do |f|
  - if @content.errors.any?
    .errors
      .span.backing
        = @content.errors.full_messages.join(', ').downcase.capitalize
  = f.label :gigs_header, form_label_with_backing(:gigs_header)
  #content-gigs-header.wysiwyg-content
    = f.text_area :gigs_header, class: "content-area"
  = f.label :venues_header, form_label_with_backing(:venues_header)
  #content-venues-header.wysiwyg-content
    = f.text_area :venues_header, class: "content-area"
  = f.label :bands_header, form_label_with_backing(:bands_header)
  #content-bands-header.wysiwyg-content
    = f.text_area :bands_header, class: "content-area"
  = f.label :features_header, form_label_with_backing(:features_header)
  #content-features-header.wysiwyg-content
    = f.text_area :features_header, class: "content-area"
  = f.label :about_header, form_label_with_backing(:about_header)
  #content-about-header.wysiwyg-content
    = f.text_area :about_header, class: "content-area"
  = f.label :about_content, form_label_with_backing(:about_content)
  #content-about-content.wysiwyg-content
    = f.text_area :about_content, class: "content-area"
  %br
  = f.submit "Submit"


