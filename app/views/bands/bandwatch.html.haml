#bands-listings
  - @bands.each do |band|
    .band-listing-wrapper.standard
      .close &#x2715;
      .band-listing.backing
        .band-image
          = image_tag band.image
        .band-image-credit
          = band.image_credit
        .band-name
          = band.name
        .band-social-media
          - if band.website
            .website
              = band.website
          - if band.bandcamp
            .bandcamp
              = band.bandcamp
          - if band.facebook
            .facebook
              = band.facebook
          - if band.soundcloud
            .soundcloud
              = band.soundcloud

